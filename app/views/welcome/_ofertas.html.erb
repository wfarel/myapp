<div id="ofertas" class="container-fluid ">
  <div class="text-center">
    <h2>Ofertas</h2>
    <h4>No te pierdas las ofertas especiales.</h4>
  </div>
  <div class="row slideanim">
    <% @ofertas.each do |ofertum| %>
      <div class="col-sm-3 col-xs-12">
        <div class="panel panel-default text-center">
          <div class="panel-heading">
            <h1><%= ofertum.titulo %></h1>
          </div>
          <div class="panel-body">
            <%= image_tag ofertum.imagen.url, width:"100%", height:"200px" %>
            <p><strong><%= ofertum.codigo %></strong></p>
            <p><strong><%= ofertum.descripcion %></strong></p>
          </div>
          <div class="panel-footer">
            <h3><%= ofertum.precio %> $</h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
